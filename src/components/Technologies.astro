---
import {technologies, frameworks, dataBase} from '../assets/js/data.js'
---

<div class="w-[100%] mx-auto mt-20 mb-10">
    <h2 class="cursor-pointer font-black w-fit md:mx-0 md:ml-5 sm:text-6xl xs:text-[40px] xs:mx-center">Technologies</h2>
</div>

<div class="overflow-x-hidden whitespace-nowrap cursor-pointer">
    <div class="tech-card inline-block">
        {
            technologies.map((technologies) => (
                <ul>
                    <a
                    href="#"
                    class="text-2xl opcacity-50 hover:opacity-100 duration-300 ease-in cursor-pointer">
                        <i class = {technologies.logo}/>

                    </a>
                </ul>
            ))
        }

    </div>
</div>