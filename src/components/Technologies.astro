---
import {technologies} from '../assets/js/data';
import TechnologyCards from './TechnologyCards.astro'
---

<div class="text-center sm:text-center w-[75%] mx-auto mt-20 mb-10"
data-tech-h1
>
    <h2 class=" cursor-pointer font-black w-fit md:mx-0 md:ml-5 sm:text-6xl xs:text-[40px] xs:text-center">Technologies</h2>
</div>

<!--Slider-->
<div class="overflow-x-auto whitespace-nowrap cursor-pointer"
data-tech-wrapper
>
    <div class="tech-card inline-block m-0 w-[134rem]">
        {
            technologies.map((tech) => (
            <div class="inline-block m-0">
                <TechnologyCards
                    text={tech.text}
                    logo={tech.logo}
                />
            </div>
           ))
         }
    </div>
</div>

 <!-- Modal -->
<div class="w-screen h-screen bg-black/70 fixed top-0 left-0 z-[100%]
justify-center items-center hidden"
data-tech-modal>
    <div class="tech-modal w-4/5 h-[70%] overflow-y-auto flex flex-wrap
     justify-center items-center gap-x-5 gap-y-4 bg-red-500"
     data-tech-stop 
>
    {
        technologies.map((tech) => (
            <div class="inline-block m-0">
                <TechnologyCards
                    text={tech.text}
                    logo={tech.logo}
                />
            </div>
           ))
        }
    </div>
</div >
